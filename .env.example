# App Configuration
APP_NAME=Nova Trust API
APP_VERSION=1.0.0
DEBUG=true
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-in-production-with-long-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# Database
DATABASE_URL=postgresql://postgres:novatrust2024@localhost:5432/novatrust

# Redis
REDIS_URL=redis://localhost:6379

# Email Configuration (Configure with your email provider)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@novatrust.com
EMAILS_FROM_NAME=Nova Trust Finance

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# SMS Configuration (Configure with your SMS provider)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com/send

# Mifos Core Banking Integration
MIFOS_BASE_URL=https://your-mifos-instance.com/fineract-provider/api/v1
MIFOS_TENANT=default
MIFOS_USERNAME=mifos
MIFOS_PASSWORD=password

# CORS Origins
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","https://novatrust.com"]

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_SITE_URL=http://localhost:3000